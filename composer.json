{
    "name":        "zangra/geodis-bundle",
    "description": "Geodis REST/JSON integration for Sylius / Symfony projects",
    "type":        "symfony-bundle",
    "license":     "MIT",
    "authors" : [{
        "name" : "Maxime Lambot",
        "email" : "maxime@zangra.com"
    }],

    "require": {
        "php": "^8.1 || ^8.4",
        "symfony/framework-bundle": "^6.4",
        "symfony/http-client":       "^6.4",
        "symfony/http-kernel":       "^6.4",
        "symfony/dependency-injection": "^6.4",
        "symfony/config":            "^6.4",
        "doctrine/orm":              "^2.17",
        "doctrine/doctrine-bundle":  "^2.10",
        "doctrine/migrations":       "^3",
        "guzzlehttp/guzzle":         "^7.8",
        "guzzlehttp/psr7":           "^2.7",
        "gedmo/doctrine-extensions": "^3.13",
        "symfony/event-dispatcher":  "^6.4"
    },

    "require-dev": {
        "symfony/phpunit-bridge": "^6.4",
        "phpstan/phpstan":        "^1.11",
        "phpunit/phpunit":        "^11.0"
    },


    "autoload": {
        "psr-4": {
            "GeodisBundle\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "GeodisBundle\\Tests\\": "tests/"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-main": "3.0-dev"
        },
        "symfony": {
            "bundle": "GeodisBundle\\\\GeodisBundle"
        }
    },


    "scripts": {
        "test": "phpunit"
    }
}